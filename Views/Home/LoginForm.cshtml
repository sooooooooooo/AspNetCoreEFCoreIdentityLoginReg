@model LoginRegWithIdentity.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Register Page";
}

<div class="text-center">
    <h1 class="display-4">Sign In</h1>
    <p><a href="/register">Create a new account</a></p>
    <p class="text-danger">@TempData["NotYetLoginOrRegister"]</p>
    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    }
</div>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <form asp-action="Login" asp-controller="Home" method="POST">
                <div class="form-group">
                    <label asp-for="UserNameLogin"></label>
                    <input asp-for="UserNameLogin" class="form-control">
                    <span asp-validation-for="UserNameLogin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordLogin"></label>
                    <input asp-for="PasswordLogin" class="form-control">
                    <span asp-validation-for="PasswordLogin" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>